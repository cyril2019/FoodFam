<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logo"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>
    <EditText
        android:id="@+id/etMobileNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgLogo"
        android:layout_centerHorizontal="true"
        android:maxLines="1"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:hint=" Mobile Number(10 digits)"
        android:textColorHint="@color/colorPrimaryDark"
        android:background="#DAF7A6"
        android:drawableStart="@drawable/ic_mobile_icon"
        android:inputType="phone"
        android:textColor="@color/black"
        android:ems="10"/>
    <EditText
        android:id="@+id/etPassword"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etMobileNo"
        android:layout_centerHorizontal="true"
        android:maxLines="1"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:hint=" Password"
        android:textColorHint="@color/colorPrimaryDark"
        android:drawableStart="@drawable/ic_pass_icon"
        android:inputType="numberPassword"
        android:background="#DAF7A6"
        android:ems="10"/>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/etPassword"
        android:background="@drawable/btn_rounded"
        android:layout_margin="10dp"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/txtForgetPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forget Password?"
        android:layout_below="@+id/btnLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/txtRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dont have an account? Sign Up now"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:textColor="#000000"
        android:textSize="15sp"/>

</RelativeLayout>